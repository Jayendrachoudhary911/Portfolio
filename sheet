    <title>Data Entry Web App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #ffffff;
        }
        .form-group {
            margin: 15px;
        }
        label {
            display: block;
            margin: 5px 45px;
            font-weight: bolder;
        }
        input[type="text"], input[type="email"] {
            width: 92%;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .button {
            background-color: #020202;
            color: white;
            padding: 10px;
            margin: 0 30px;
            font-size: 16px;
            border: 1px solid transparent;
            border-radius: 8px;
            cursor: pointer;
            width: 180px;
            font-weight: bolder;
            transition: background 0.3s ease-in-out;
        }
        .button:hover {
            background-color: #ffffff;
            color: #020202;
            border: 1px solid #020202;
        }
        .loading {
            display: none;
            padding: 10px;
            background-color: #e6e6e6;
            color: #1a1a1a;
            font-weight: bolder;
            border-radius: 8px;
            text-align: center;
            margin-top: 20px;
        }
        .popup {
            display: none;
            padding: 10px;
            background-color: #dff0d8;
            color: #3c763d;
            font-weight: bolder;
            border-radius: 8px;
            text-align: center;
            margin-top: 20px;
        }
        .sheet {
            display: flex;
        }
    </style>
